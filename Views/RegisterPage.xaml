<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFirebaseDemo.Views.RegisterPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F5F7FA">

    <ScrollView Orientation="Vertical" VerticalScrollBarVisibility="Never">
        
        <Grid RowDefinitions="Auto, *" Padding="20,15,20,20" VerticalOptions="Fill">

            
            <Grid Grid.Row="0" ColumnDefinitions="45, *, 45" VerticalOptions="Center" Margin="0,5,0,15">
                
                <Border Grid.Column="0"
        HeightRequest="40"
        WidthRequest="40"
        StrokeShape="RoundRectangle 20"
        BackgroundColor="White"
        Padding="10">
                    
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,2" Opacity="0.1" Radius="5"/>
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnBackButtonClicked"/>
                    </Border.GestureRecognizers>

                    
                    <Image Source="back_icon.png" 
           Aspect="AspectFit"
           HorizontalOptions="Center" 
           VerticalOptions="Center" />
                </Border>

                <Label Grid.Column="1"
                       Text="SmartNest"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="#1E88E5"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Grid>

            
            <VerticalStackLayout Grid.Row="1" Spacing="0" VerticalOptions="Center">

                <Label Text="Create an Account?"
                       FontSize="22"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#1A1A1A"
                       Margin="0,0,0,15"/>

                <Border BackgroundColor="White"
                        StrokeShape="RoundRectangle 40"
                        Padding="25,25,25,25"
                        MaximumWidthRequest="500"
                        HorizontalOptions="Fill">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,10" Opacity="0.05" Radius="20"/>
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="12">

                        
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Name" FontAttributes="Bold" TextColor="#444" FontSize="13" Margin="5,0"/>
                            <Border StrokeShape="RoundRectangle 12" StrokeThickness="0" BackgroundColor="#F2F2F7" Padding="15,0">
                                <Entry x:Name="NameEntry" Placeholder="Johan arindo" HeightRequest="45" TextColor="Black"/>
                            </Border>
                        </VerticalStackLayout>

                        
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Email" FontAttributes="Bold" TextColor="#444" FontSize="13" Margin="5,0"/>
                            <Border StrokeShape="RoundRectangle 12" StrokeThickness="0" BackgroundColor="#F2F2F7" Padding="15,0">
                                <Entry x:Name="EmailEntry" Placeholder="joedoe75@gmail.com" Keyboard="Email" HeightRequest="45" TextColor="Black"/>
                            </Border>
                        </VerticalStackLayout>

                        
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Password" FontAttributes="Bold" TextColor="#444" FontSize="13" Margin="5,0"/>
                            <Border StrokeShape="RoundRectangle 12" StrokeThickness="0" BackgroundColor="#F2F2F7" Padding="15,0">
                                <Entry x:Name="PasswordEntry" Placeholder="********" IsPassword="True" HeightRequest="45" TextColor="Black"/>
                            </Border>
                        </VerticalStackLayout>

                       
                        <HorizontalStackLayout Spacing="5" Margin="0,2">
                            <CheckBox x:Name="TermsCheckBox" Color="#1E88E5" Scale="0.7"/>
                            <Label Text="I agree to the Terms of Service" VerticalOptions="Center" FontSize="12" TextColor="#666"/>
                        </HorizontalStackLayout>

                       
                        <Grid Margin="0,5,0,0">
                            <Button x:Name="RegisterBtn"
                                    Text="Create account"
                                    HeightRequest="52"
                                    CornerRadius="26"
                                    BackgroundColor="#3D8CFF"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    Clicked="OnRegisterClicked"/>

                            <ActivityIndicator x:Name="RegisterIndicator"
                                               IsRunning="False"
                                               IsVisible="False"
                                               Color="White"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               HeightRequest="30"
                                               WidthRequest="30"/>
                        </Grid>

                        
                        <VerticalStackLayout Spacing="10" Margin="0,5,0,0">
                            <Label Text="Or Sign in with" HorizontalOptions="Center" TextColor="#999" FontSize="12"/>
                            <HorizontalStackLayout HorizontalOptions="Center" Spacing="25">
                                <ImageButton Source="facebook.png" WidthRequest="40" HeightRequest="40" Aspect="AspectFit" Clicked="OnFacebookLoginClicked"/>
                                <ImageButton Source="google.png" WidthRequest="40" HeightRequest="40" Aspect="AspectFit" Clicked="OnGoogleLoginClicked"/>
                                <ImageButton Source="apple.png" WidthRequest="40" HeightRequest="40" Aspect="AspectFit" Clicked="OnAppleLoginClicked"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>

        </Grid>
    </ScrollView>
</ContentPage>




